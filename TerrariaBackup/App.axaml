<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TerrariaBackup.App"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush
                        x:Key="BackgroundColor"
                        Color="#FFFFFF" />

                    <SolidColorBrush
                        x:Key="BaseColor"
                        Color="#EFEFEF" />

                    <SolidColorBrush
                        x:Key="SecondaryBaseColor"
                        Color="#BCBCBC" />

                    <SolidColorBrush
                        x:Key="TextColor"
                        Color="#000000" />

                    <SolidColorBrush
                        x:Key="TextHighlightColor"
                        Color="#212121" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush
                        x:Key="BackgroundColor"
                        Color="#111111" />

                    <SolidColorBrush
                        x:Key="BaseColor"
                        Color="#282828" />

                    <SolidColorBrush
                        x:Key="SecondaryBaseColor"
                        Color="#4F4F4F" />

                    <SolidColorBrush
                        x:Key="TextColor"
                        Color="#FFFFFF" />

                    <SolidColorBrush
                        x:Key="TextHighlightColor"
                        Color="#DDDDDD" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />

        <Style Selector="Window">
            <Setter
                Property="Background"
                Value="{DynamicResource ResourceKey=BackgroundColor}" />
        </Style>

        <Style Selector="HeaderedContentControl">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid
                        RowDefinitions="Auto, *"
                        ColumnDefinitions="Auto, *">
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5, 0, 0, 0"
                            Padding="5, 0"
                            Background="{DynamicResource ResourceKey=BackgroundColor}"
                            BorderThickness="1"
                            ZIndex="1">
                            <TextBlock
                                Text="{TemplateBinding Property=Header}"
                                FontWeight="Bold" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            Margin="0, 10, 0, 0"
                            Padding="0, 5"
                            BorderBrush="{DynamicResource ResourceKey=SecondaryBaseColor}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter
                                Padding="8"
                                Content="{TemplateBinding Property=Content}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="TextBox">
            <Setter
                Property="Background"
                Value="{DynamicResource ResourceKey=BackgroundColor}" />

            <Setter
                Property="BorderBrush"
                Value="{DynamicResource ResourceKey=SecondaryBaseColor}" />
        </Style>

        <Style Selector="ListBox">
            <Setter
                Property="Background"
                Value="{DynamicResource ResourceKey=BaseColor}" />

            <Setter
                Property="CornerRadius"
                Value="4" />
        </Style>

        <Style Selector="DataGridColumnHeader">
            <Setter
                Property="Background"
                Value="{DynamicResource ResourceKey=BaseColor}" />

            <Setter
                Property="Foreground"
                Value="{DynamicResource ResourceKey=TextColor}" />

            <Setter
                Property="FontSize"
                Value="14" />
        </Style>

        <Style Selector="DataGridCell:current /template/ Rectangle#CurrencyVisual">
            <Setter
                Property="IsVisible"
                Value="False" />
        </Style>

        <Style Selector="DataGridCell:focus /template/ Grid#FocusVisual">
            <Setter
                Property="IsVisible"
                Value="False" />
        </Style>

        <Style Selector="GridSplitter">
            <Setter
                Property="Background"
                Value="{DynamicResource ResourceKey=BaseColor}" />

            <Setter
                Property="CornerRadius"
                Value="4" />
        </Style>

        <Style Selector="HyperlinkButton">
            <Setter
                Property="Foreground"
                Value="{DynamicResource ResourceKey=TextColor}" />
        </Style>

        <Style Selector="HyperlinkButton:pointerover /template/ ContentPresenter">
            <Setter
                Property="Foreground"
                Value="{DynamicResource ResourceKey=TextHighlightColor}" />
        </Style>

        <Style Selector="HyperlinkButton:pressed /template/ ContentPresenter">
            <Setter
                Property="Foreground"
                Value="{DynamicResource ResourceKey=TextHighlightColor}" />
        </Style>
    </Application.Styles>
</Application>