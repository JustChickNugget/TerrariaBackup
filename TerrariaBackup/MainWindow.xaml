<Window x:Class="TerrariaBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Terraria Backup"
        Width="600"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        ResizeMode="CanMinimize"
        Loaded="Window_OnLoaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0"
              Background="White">
            <MenuItem Header="Help">
                <MenuItem Header="Application">
                    <MenuItem
                        Header="About"
                        Click="ApplicationAboutMenuItem_Click" />
                    
                    <MenuItem
                        Header="Check for updates"
                        Click="ApplicationCheckForUpdatesMenuItem_Click" />
                </MenuItem>
                
                <MenuItem Header="Developer">
                    <MenuItem
                        Header="GitHub"
                        Click="DeveloperGitHubMenuItem_Click" />
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <Grid Grid.Row="1"
              Margin="15 10 15 5">
            <GroupBox Padding="15 10 15 15" Header="Location">
                <StackPanel>
                    <StackPanel>
                        <Label Content="Path to Terraria's directory:" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox
                                x:Name="TerrariaPathTextBox"
                                Grid.Column="0"
                                IsReadOnly="True" />
                            
                            <Button
                                Grid.Column="2"
                                Content="&lt;"
                                Click="TerrariaPathUpButton_OnClick" />
                            
                            <Button
                                Grid.Column="4"
                                Content="O"
                                Click="TerrariaPathOpenButton_OnClick" />
                            
                            <Button
                                Grid.Column="6"
                                Content="..."
                                Click="TerrariaPathChooseButton_OnClick" />
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Margin="0 5">
                        <Label Content="Path where backup directory will be created:" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox
                                x:Name="BackupPathTextBox"
                                Grid.Column="0"
                                IsReadOnly="True" />
                            
                            <Button
                                Grid.Column="2"
                                Content="&lt;"
                                Click="BackupPathUpButton_OnClick" />
                            
                            <Button
                                Grid.Column="4"
                                Content="O"
                                Click="BackupPathOpenButton_OnClick" />
                            
                            <Button
                                Grid.Column="6"
                                Content="..."
                                Click="BackupPathChooseButton_OnClick" />
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel>
                        <Label Content="Name of the backup directory:" />
                            
                        <TextBox
                            x:Name="BackupDirectoryNameTextBox"
                            Text="TerrariaBackup" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <Button
            Grid.Row="2"
            Margin="15 5 15 15"
            Content="Show found"
            Click="ShowFoundButton_OnClick" />
    </Grid>
</Window>
