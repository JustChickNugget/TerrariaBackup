<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="TerrariaBackup.MainWindow"
        mc:Ignorable="d"
        d:DesignWidth="600"
        d:DesignHeight="350"
        Width="600"
        Height="350"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Title="Terraria Backup"
        Loaded="Window_OnLoaded"
        KeyDown="Window_OnKeyDown">
    <ScrollViewer>
        <Grid
            RowDefinitions="Auto, Auto, Auto"
            RowSpacing="5">
            <Menu
                Grid.Row="0"
                Background="Transparent">
                <MenuItem Header="Help">
                    <MenuItem
                        Header="About"
                        Click="AboutApplicationMenuItem_OnClick" />

                    <MenuItem
                        Header="Check for updates"
                        Click="CheckForUpdatesMenuItem_OnClick" />
                </MenuItem>
            </Menu>

            <HeaderedContentControl
                Grid.Row="1"
                Margin="15, 0"
                Header="Information">
                <StackPanel
                    Orientation="Vertical"
                    Margin="15, 5"
                    Spacing="5">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Path to the Terraria directory:" />

                        <Grid
                            ColumnDefinitions="*, Auto, Auto, Auto"
                            ColumnSpacing="5">
                            <TextBox
                                x:Name="TerrariaPathTextBox"
                                Grid.Column="0"
                                Margin="0, 0, 5, 0"
                                IsReadOnly="True" />

                            <Button
                                Grid.Column="1"
                                ToolTip.Tip="Move up one directory"
                                Content="&lt;"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="TerrariaPathUpButton_OnClick" />

                            <Button
                                Grid.Column="2"
                                ToolTip.Tip="Open directory"
                                Content="O"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="TerrariaPathOpenButton_OnClick" />

                            <Button
                                Grid.Column="3"
                                ToolTip.Tip="Select directory"
                                Content="..."
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="TerrariaPathSelectButton_OnClick" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Path where backup directory will be created:" />

                        <Grid
                            ColumnDefinitions="*, Auto, Auto, Auto"
                            ColumnSpacing="5">
                            <TextBox
                                x:Name="BackupPathTextBox"
                                Grid.Column="0"
                                Margin="0, 0, 5, 0"
                                IsReadOnly="True" />

                            <Button
                                Grid.Column="1"
                                ToolTip.Tip="Move up one directory"
                                Content="&lt;"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="BackupPathUpButton_OnClick" />

                            <Button
                                Grid.Column="2"
                                ToolTip.Tip="Open directory"
                                Content="O"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="BackupPathOpenButton_OnClick" />

                            <Button
                                Grid.Column="3"
                                ToolTip.Tip="Select directory"
                                Content="..."
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="BackupPathSelectButton_OnClick" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Name of the backup directory:" />

                        <Grid
                            ColumnDefinitions="*, Auto"
                            ColumnSpacing="5">
                            <TextBox
                                x:Name="BackupDirectoryNameTextBox"
                                Grid.Column="0"
                                Margin="0, 0, 5, 0" />

                            <Button
                                Grid.Column="1"
                                ToolTip.Tip="Set default value"
                                Content="D"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="BackupDirectoryDefaultButton_OnClick" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </HeaderedContentControl>

            <Button
                Grid.Row="2"
                Margin="15, 5, 15, 15"
                Content="Show found data"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Click="ShowFoundDataButton_OnClick" />
        </Grid>
    </ScrollViewer>
</Window>